#!/usr/bin/env python3
import parent
from string import ascii_uppercase
from srcs.ex04 import print_truth_table
from srcs.formula_checks import BINARY_OPERATORS, is_valid_variable_formula
import sys


if len(sys.argv) != 2 or not set(formula := sys.argv[1]) <= set(
    BINARY_OPERATORS + ascii_uppercase + "!"
):
    print("Usage:", sys.argv[0], f"'[01!{BINARY_OPERATORS}]+'")
    print("Example:", sys.argv[0], "'1011||='")
elif not is_valid_variable_formula(formula):
    print(formula, "is malformatted")
else:
    print_truth_table(formula)
