#!/usr/bin/env python3
import parent
from srcs.ex03 import eval_formula
from srcs.formula_checks import BINARY_OPERATORS, BOOLEANS, is_valid_explicit_formula
import sys

if len(sys.argv) != 2 or not set(formula := sys.argv[1]) <= set(
    BINARY_OPERATORS + BOOLEANS + "!"
):
    print("Usage:", sys.argv[0], f"'[01!{BINARY_OPERATORS}]+'")
    print("Example:", sys.argv[0], "'1011||='")
else:
    print(
        formula,
        "is",
        eval_formula(formula) if is_valid_explicit_formula(formula) else "malformatted",
    )
